import discord
from discord.ext import commands

bot = commands.Bot(command_prefix="$", intents=discord.Intents.all())

@bot.command("start")
async def start(ctx):
    await ctx.send ("Привет - это эко робот, мы сообщество молодых разроботчиков, которые топят за сохраность нашей планеты. Здесь ты найдёшь инфу как переробатывать/сортировать материал. Не оставаяся равнодушним и внеси вклад в спасение планеты, вступай в наше сообщество и помоги планете, мы будем очень признательны каждому новому участнику !!!")
    await ctx.send ("Напиши боту : дерево/ пластик/ батарейка, чтобы узнать как правильно их утилизировать ")
    
@bot.command("tree")
async def tree(ctx):
    await ctx.send ("Правильная утилизация древесного мусора и отходов может быть осуществлена разными методами:Сжигание в топках для дальнейшей выработки энергии.Получение древесного угля методом пиролиза, когда происходит разложение остатков древесины при отсутствии кислородаСоздание брикетов.Производство топливных палетов без связующих компонентов.Газификация, при которой древесина преобразуется в газ.")
    
@bot.command("plastic")
async def plastic(ctx):
    await ctx.send (". Если и покупать пластик, то только тот, который можно переработать  ,  Сдавайте бутылки на переработку, Пользуйтесь фильтром для воды и правильно утилизируйте расходники")
    
@bot.command("battery")
async def battery(ctx):
    await ctx.send ("Поместите элементы в плотный целлофановый пакет, пластиковую бутылку или емкость с плотно закрывающейся крышкойПосле того как тара будет заполнена, а это обычно бывает лет через 10, отнесите их в пункт приема.Выбросите их в специальную урну.")
    
@bot.command("help")
async def help(ctx):
    await ctx.send (" Команды : start/tree/battery/plastic/help, В случае неполадке звонить по номеру : 89884367321656") )
    

    
